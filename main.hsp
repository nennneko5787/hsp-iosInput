#include "hsp3dish.as"

	objsize 300, 60
    pos 10, 10
	button gosub "キーボード表示", *openKeyBoard
    objId = stat

	repeat
    devinfo text, "keyboard_text"

    redraw 0
        if (text == "") {
            objprm objId, "キーボード表示"
        } else {
            objprm objId, text
        }
    redraw 1

    stick key

    if (key & 256) {
        devcontrol text, "close_keyboard"
    }

    await (1000 / 60)
	loop

*openKeyBoard
    dialog "キーボードオープン！"
    devcontrol "open_keyboard"
    return
